@{
    Layout = "_LayoutAdmin";
}
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    function SetGroup() {
        $("#GroupId").val($('#drpGroupList option:selected').val())
    }
    function SetCourse() {
        $("#CourseId").val($('#drpCourseList option:selected').val())
    }
    function SetAudiId() {
        $("#AudiId").val($('#drpAudiIdList option:selected').val())
    }
    function SetTime() {
        $("#Time").val($('#drpTimeList option:selected').val())
    }
    function SetWeekday() {
        $("#Weekday").val($('#drpWeekdayList option:selected').val())
    }
    function SetTeacherId() {
        $("#TeacherId").val($('#drpTeacherIdList option:selected').val())
    }
</script>
@model CRM.WEB.Models.Entyties.Event
@{
    <div class="position-relative">
        <h1>Добавить событие</h1>

        <form method="post">
            <div class="mt-3" class="form-group">
                <label class="control-label">Время</label>
                <input required type="hidden" asp-for="Time" value="hidden" value="" />
                <select required id="drpTimeList" asp-for="Time" name="drpTimeList" class="form-control" asp-items="@ViewBag.time" onchange="SetTime()">
                    <option value=''>--выбрать время--</option>
                </select>
            </div>
            <div class="mt-3" class="form-group">
                <label class="control-label">День недели</label>
                <input required type="hidden" asp-for="Weekday" value="hidden" value="" />
                <select required id="drpWeekdayList" asp-for="Weekday" name="drpWeekdayList" class="form-control" asp-items="@ViewBag.Weekend" onchange="SetWeekday()">
                    <option value=''>--выбрать дня недели--</option>
                </select>
            </div>
            <div class="mt-3" class="form-group">
                <label class="control-label">Аудитория</label>
                <input required type="hidden" asp-for="AudiId" value="hidden" value="" />
                <select required id="drpAudiIdList" asp-for="AudiId" name="drAudiIdList" class="form-control" asp-items="@ViewBag.Clasl" onchange="SetAudiId()">
                    <option value=''>--выбрать аудиторию--</option>
                </select>
            </div>
            <div class="mt-3" class="form-group">
                <label class="control-label">Предмет</label>
                <input required type="hidden" asp-for="CourseId" value="hidden" value="" />
                <select required id="drpCourseList" asp-for="CourseId" name="drpCourseList" class="form-control" asp-items="@ViewBag.Cl" onchange="SetCourse()">
                    <option value=''>--выбрать предмет--</option>
                </select>
            </div>
            <div class="mt-3" class="form-group">
                <label class="control-label">Преподаватель</label>
                <input required type="hidden" asp-for="TeacherId" value="hidden" value="" />
                <select required id="drpTeacherIdList" asp-for="TeacherId" name="drpTeacherIdList" class="form-control" asp-items="@ViewBag.Tel" onchange="SetTeacherId()">
                    <option value=''>--выбрать предмет--</option>
                </select>
            </div>
            <div class="mt-3" class="form-group">
                <label class="control-label">Группы</label>
                <input required type="hidden" asp-for="GroupId" value="hidden" value="" />
                <select required id="drpGroupList" asp-for="GroupId" name="drpGroupList" class="form-control" asp-items="@ViewBag.Gl" onchange="SetGroup()">
                    <option value=''>--выбрать группу--</option>
                </select>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </form>
    </div>
}

<script>
    $(document).ready(function () {
        $("#GroupId").val($('#drpGroupList option:selected').val())
        $("#CourseId").val($('#drpCourseList option:selected').val())
        $("#AudiId").val($('#drpAudiIdList option:selected').val())
        $("#TeacherId").val($('#drpTeacherList option:selected').val())
        $("#Time").val($('#drpTimeList option:selected').val())
        $("#Weekday").val($('#drpWeekdayList option:selected').val())
    });
</script>