@{
    Layout = "_LayoutAdmin";
}
@model CRM.WEB.Models.Entyties.Teacher
@{
    <div class="position-relative">
        <h1>Данные преподователя</h1>

        <form method="post">
            <div class="mt-3">
                <label class="form-label">ФИО</label>
                <input type="text" class="form-control" required placeholder="Фамиилия, Имя, Отчество преподователя" asp-for="Name" />
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </form>
    </div>
}