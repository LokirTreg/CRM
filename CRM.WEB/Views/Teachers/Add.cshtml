<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    function SetCourse() {
        $("#CourseId").val($('#drpCourseList option:selected').val())
    }
</script>
@model CRM.WEB.Models.AddTeacherViewModel
@{
    <div class="position-relative">
        <h1>Добавить преподователя</h1>

        <form method="post">
            <div class="mt-3">
                <label class="form-label">ФИО</label>
                <input type="text" class="form-control" required placeholder="Фамиилия, Имя, Отчество преподователя" asp-for="Name" />
            </div>
            <div class="mt-3" class="form-group">
                <label class="control-label">Предметы</label>
                <input required type="hidden" asp-for="CourseId" value="hidden" value="" />
                <select required id="drpCourseList" asp-for="CourseId" name="drpCourseList" class="form-control" asp-items="@ViewBag.Cl" onchange="SetCourse()">
                    <option value=''>--выбрать предмет--</option>
                </select>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </form>
    </div>
}