@{
}
@model IEnumerable<CRM.WEB.Models.TeacherDetailView>
<h1>Преподаватели</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>ФИО</th>
            <th>
                <a class="btn btn-success btn-block" asp-controller="Teachers" asp-action="Add">Добавить</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.teacher.Id</td>
                <td>@teacher.teacher.Name</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Teachers" asp-action="Edit" asp-route-id="@teacher.teacher.Id">
                        Изменить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>