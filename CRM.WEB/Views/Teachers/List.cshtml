@{
}
@model List<CRM.WEB.Models.Entyties.Teacher>
<h1>Преподаватели</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Фио</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Id</td>
                <td>@teacher.FIO</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Teachers" asp-action="Edit" asp-route-id="@teacher.Id">
                        Изменить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success btn-block" asp-controller="Teachers" asp-action="Add">Добавить</a>