@{
    Layout = "_LayoutAdmin";
}
@model List<CRM.WEB.Models.Entyties.Сlassroom>
<h1>Группы</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Номер</th>
            <th>
                <div class="mt-3">
                    <a type="submit" class="btn btn-success" asp-controller="Classroom" asp-action="Add">Добавить</a>
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var classroom in Model)
        {
            <tr>
                <td>@classroom.Id</td>
                <td>@classroom.Number</td>
                <td>
                    <a type="submit" class="btn btn-primary" asp-controller="Classroom" asp-action="Edit" asp-route-id="@classroom.Id">Изменить</a>
                </td>
            </tr>
        }
    </tbody>
</table>