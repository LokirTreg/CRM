@{
}
@model CRM.WEB.Models.Entyties.Group
<h1>Изменить даннный Группы</h1>
@if (Model is null)
{
    <p>Нет такой группы</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">ФИО</label>
            <input type="text" class="form-control" asp-for="Number" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn">Сохранить</button>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Номер</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in ViewBag.ListStudents)
                {
                    <tr>
                        <td>@group.Text</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="mt-3">
            <label class="form-label">Студенты</label>
            <input type="hidden" class="form-control" asp-for="Group_Students" vakue="hidden" />
            <select asp-for="Group_Students" asp-items="@ViewBag.ListStudents" onchange="SetStudent()">
                <option value="-1">--выбрать студента--</option>
            </select>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Groups">Удалить</button>
        </div>
    </form>
}