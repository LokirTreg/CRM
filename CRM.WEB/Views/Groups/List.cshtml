@{
}
@model List<CRM.WEB.Models.Entyties.Group>
<h1>Группы</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Номер</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr>
                <td>@group.Id</td>
                <td>@group.Number</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Groups" asp-action="Edit" asp-route-id="@group.Id">
                        Изменить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success btn-block" asp-controller="Groups" asp-action="Add">Добавить</a>