@model CRM.WEB.Models.AddStudentViewModel
<div class="position-relative">
<h1>Добавить студента</h1>
    <form method="post">
        <div class="mt-3">
            <label class="form-label">ФИО</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Почта</label>
            <input type="text" class="form-control" asp-for="Email"/>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary" >Сохранить</button>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Номер</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in ViewBag.listGroups)
                {
                    <tr>
                        <td>@group.Text</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="mt-3">
            <label class="form-label">Студенты</label>
            <input type="hidden" class="form-control" asp-for="Group" value="hidden" value="" />
            <select asp-for="Group" asp-items="@ViewBag.listGroups" onchange="SetStudent()">
                <option value="-1">--выбрать студента--</option>
            </select>
        </div>
    </form>
</div>