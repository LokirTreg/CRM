@{
    Layout = "_LayoutAdmin";
}
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    function SetGroup() {
        $("#GroupId").val($('#drpGroupList option:selected').val())
    }
</script>
@model CRM.WEB.Models.Entyties.Student
@{
        <div class="position-relative">
            <h1>Данные студента</h1>

            <form method="post">
                <div class="mt-3">
                    <label class="form-label">ФИО</label>
                <input required type="text" class="form-control" required placeholder="Фамиилия, Имя, Отчество студента" asp-for="Name" />
                </div>
                <div class="mt-3">
                    <label class="form-label">Почта</label>
                <input required type="email" class="form-control" required placeholder="Почта студента" asp-for="Email" />
                </div>
                <div class="mt-3" class="form-group">
                    <label class="control-label">Группы</label>
                    <input required type="hidden" asp-for="GroupId" value="hidden" value="" />
                    <select required id="drpGroupList" asp-for="GroupId" name="drpGroupList" class="form-control" asp-items="@ViewBag.GL" onchange="SetGroup()">
                    <option value=''>--выбрать группу--</option>
                    </select>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary" >Сохранить</button>
                </div>
             </form>
        </div>
}
<script>
    $(document).ready(function () {
        $("#GroupId").val($('#drpGroupList option:selected').val())
    });
</script>