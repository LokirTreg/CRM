@{
}
@model IEnumerable<CRM.WEB.Models.StudentDetailView>
<h1>Студенты</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Фио</th>
            <th>Почта</th>
            <th>Номер группы</th>
            <th>
                <a class="btn btn-success btn-block" asp-controller="Students" asp-action="Add">Добавить</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.student.Id</td>
                <td>@item.student.Name</td>
                <td>@item.student.Email</td>
                <td>@item.gro.Number</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@item.student.Id">
                        Изменить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>