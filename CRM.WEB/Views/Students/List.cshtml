@{
    Layout = "_LayoutAdmin";
}
@model IEnumerable<CRM.WEB.Models.StudentDetailView>
<h1>Студенты</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Фио</th>
            <th>Почта</th>
            <th>Номер группы</th>
            <th><a class="btn btn-success btn-block" asp-controller="Students" asp-action="Add">Добавить</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.student.Id</td>
                <td>@item.student.Name</td>
                <td>@item.student.Email</td>
                <td>@item.gro.Number</td>
                <td>
                    <form asp-action="Delete" asp-controller="Students" asp-route-id="@item.student.Id">
                        <div class="btn-group btn-group-sm">
                            <a class="btn btn-warning" asp-controller="Students" asp-action="Add" asp-route-id="@item.student.Id">Изменить</a>
                            <button type="submit" class="btn btn-danger">Удалить</button>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>