@{
}
@model List<CRM.WEB.Models.Entyties.Course>
<h1>Группы</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Название</th>
            <th>
                <a class="btn btn-success btn-block" asp-controller="Course" asp-action="Add">Добавить</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Id</td>
                <td>@course.Title</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Course" asp-action="Edit" asp-route-id="@course.Id">Изменить</a>
                </td>
            </tr>
        }
    </tbody>
</table>